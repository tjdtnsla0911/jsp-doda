			conn = DBConn.getConnectionon();
			pstmt = conn.prepareStatement(SQL);
			return pstmt.executeUpdate();
		} catch (Exception e) {
			e.printStackTrace();
			System.out.println(TAG + "updata :" + e.getMessage());
		}
		return -1;
	}
